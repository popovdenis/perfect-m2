<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Perfect_Event::css/event-calendar.min.css"/>
    </head>
    <referenceBlock name="after.body.start">
        <block class="Perfect\Event\Block\Adminhtml\TimetableConfig" name="perfect.timetable_service_config"
               template="Perfect_Event::timetable/config.phtml">
        </block>
    </referenceBlock>
    <referenceContainer name="content">
        <container name="timetable" htmlTag="div" htmlClass="timetable">
            <block class="Perfect\Event\Block\Adminhtml\Timetable" name="timetablejs.init"
                   template="Perfect_Event::timetable.phtml" />
        </container>
    </referenceContainer>
    <referenceBlock name="before.body.end">
        <container htmlId="perfect.appointment.popup" htmlTag="div" htmlClass="appointment-popup hidden">
            <block class="Perfect\Event\Block\Adminhtml\Appointment" name="appointment.popup"
                   template="Perfect_Event::appointment/popup.phtml"/>
        </container>
    </referenceBlock>
</page>