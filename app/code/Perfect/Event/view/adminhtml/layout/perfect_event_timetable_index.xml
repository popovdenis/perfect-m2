<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Perfect_Event::css/timetable.css"/>
        <css src="Perfect_Event::css/event-calendar.min.css"/>
        <css src="Perfect_Event::css/spectrum.css"/>
        <css src="Perfect_Event::css/font-awesome.min.css"/>
    </head>
    <referenceBlock name="after.body.start">
        <block class="Perfect\Event\Block\Adminhtml\TimetableConfig" name="perfect.timetable_client_config"
               template="Perfect_Event::timetable/config.phtml">
        </block>
    </referenceBlock>
    <referenceContainer name="content">
        <uiComponent name="events_listing"/>
        <container name="timetable" htmlTag="div" htmlClass="timetable">
            <block class="Perfect\Event\Block\Adminhtml\Timetable" name="timetablejs.init"
                   template="Perfect_Event::timetable.phtml" />
        </container>
    </referenceContainer>
    <referenceBlock name="before.body.end">
        <container htmlId="perfect.event.popup" htmlTag="div" htmlClass="event-popup hidden">
            <block class="Perfect\Event\Block\Adminhtml\Timetable" name="event.popup"
                   template="Perfect_Event::event/popup.phtml"/>
        </container>
    </referenceBlock>
</page>