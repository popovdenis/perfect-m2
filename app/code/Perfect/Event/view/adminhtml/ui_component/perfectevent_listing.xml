<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">perfectevent_listing.perfectevent_listing_data_source</item>
            <item name="deps" xsi:type="string">perfectevent_listing.perfectevent_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">perfectevent_columns</item>
    </argument>
    <settings>
        <buttons>
            <button name="add" class="Perfect\Event\Block\Adminhtml\Edit\Buttons\AddButton"/>
        </buttons>
    </settings>
    <dataSource name="perfectevent_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Perfect\Event\Model\DataProvider\Event</argument>
            <argument name="name" xsi:type="string">perfectevent_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">id</item>
                    </item>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
    </dataSource>
    <container name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="template" xsi:type="string">ui/grid/toolbar</item>
                <item name="stickyTmpl" xsi:type="string">ui/grid/sticky/toolbar</item>
            </item>
        </argument>
    </container>
    <columns name="perfectevent_columns">
        <column name="id" sortOrder="10">
            <settings>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name" sortOrder="20">
            <settings>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="enabled" component="Magento_Ui/js/grid/columns/select" sortOrder="40">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <dataType>select</dataType>
                <label translate="true">Enabled</label>
            </settings>
        </column>
        <actionsColumn name="actions" sortOrder="100" class="Perfect\Event\Ui\Component\Listing\Column\Action">
            <settings>
                <indexField>id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>