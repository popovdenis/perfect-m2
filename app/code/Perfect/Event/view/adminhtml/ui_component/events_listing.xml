<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">events_listing.events_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Perfect\Event\Block\Adminhtml\Edit\Buttons\Dummy"/>
        </buttons>
        <spinner>events_columns</spinner>
        <deps>
            <dep>events_listing.events_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="events_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Perfect\Event\Model\DataProvider\EventList" name="events_listing_data_source">
            <settings>
                <primaryFieldName>id</primaryFieldName>
                <requestFieldName>id</requestFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <container name="listing_top" template="Magento_Staging/grid/toolbar">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="template" xsi:type="string">ui/grid/toolbar</item>
                <item name="stickyTmpl" xsi:type="string">ui/grid/sticky/toolbar</item>
            </item>
        </argument>
        <container name="columns_controls" component="Magento_Ui/js/grid/controls/columns" displayArea="dataGridActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsData" xsi:type="array">
                        <item name="provider" xsi:type="string">events_listing.events_listing.columns</item>
                    </item>
                </item>
            </argument>
        </container>
        <filterSearch name="fulltext" provider="events_listing.events_listing_data_source">
            <settings>
                <chipsProvider>events_listing.events_listing.listing_top.listing_filters_chips</chipsProvider>
            </settings>
        </filterSearch>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsProvider" xsi:type="string">events_listing.events_listing.events_columns</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">events_listing.events_listing.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.filters</item>
                    </item>
                    <item name="templates" xsi:type="array">
                        <item name="filters" xsi:type="array">
                            <item name="select" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                <item name="template" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                            </item>
                        </item>
                    </item>
                    <item name="childDefaults" xsi:type="array">
                        <item name="provider" xsi:type="string">events_listing.events_listing.listing_top.listing_filters</item>
                        <item name="imports" xsi:type="array">
                            <item name="visible" xsi:type="string">events_listing.events_listing.events_columns.${ $.index }:visible</item>
                        </item>
                    </item>
                </item>
                <item name="observers" xsi:type="array">
                    <item name="column" xsi:type="string">column</item>
                </item>
            </argument>
        </filters>
    </container>
    <columns name="events_columns" class="Perfect\Event\Ui\Component\Listing\Columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">events_listing.events_listing.events_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <column name="id" sortOrder="10">
            <settings>
                <label translate="true">ID</label>
                <visible>false</visible>
            </settings>
        </column>
        <column name="started_at" component="Magento_Ui/js/grid/columns/date" sortOrder="20"
                class="Magento\Ui\Component\Listing\Columns\Date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Started At Time</label>
            </settings>
        </column>
        <column name="finished_at" component="Magento_Ui/js/grid/columns/date" sortOrder="30"
                class="Magento\Ui\Component\Listing\Columns\Date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Finished At Time</label>
            </settings>
        </column>
        <column name="employee_id" component="Magento_Ui/js/grid/columns/select" sortOrder="40">
            <settings>
                <options class="Perfect\Event\Model\Config\Source\Options\Worker"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Worker</label>
            </settings>
        </column>
        <column name="client_id" component="Magento_Ui/js/grid/columns/select" sortOrder="50">
            <settings>
                <options class="Perfect\Event\Model\Config\Source\Options\Client"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Client</label>
            </settings>
        </column>
    </columns>
</listing>
