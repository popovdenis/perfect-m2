<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">perfect_event_form.perfect_event_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Perfect\Event\Block\Adminhtml\Edit\Buttons\Back"/>
            <button name="delete" class="Perfect\Event\Block\Adminhtml\Edit\Buttons\Delete"/>
            <button name="save" class="Perfect\Event\Block\Adminhtml\Edit\Buttons\Save"/>
            <button name="save_and_continue"
                    class="Perfect\Event\Block\Adminhtml\Edit\Buttons\SaveAndContinue"/>
        </buttons>
        <layout>
            <navContainerName>left</navContainerName>
            <type>tabs</type>
        </layout>
        <deps>
            <dep>perfect_event_form.perfect_event_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="perfect_event_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Perfect\Event\Model\DataProvider\Event</argument>
            <argument name="name" xsi:type="string">perfect_event_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="perfect_event/index/editPost"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="appointment">
        <settings>
            <label translate="true">Appointment Info</label>
        </settings>
        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">appointment</item>
                    <item name="dataScope" xsi:type="string">id</item>
                </item>
            </argument>
        </field>
        <field name="service_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Service Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">appointment</item>
                    <item name="dataScope" xsi:type="string">service_name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">appointment</item>
                    <item name="dataScope" xsi:type="string">description</item>
                </item>
            </argument>
        </field>
        <field name="started_at">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Started At</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">appointment</item>
                    <item name="dataScope" xsi:type="string">started_at</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-optional-datetime" xsi:type="boolean">true</item>
                    </item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
                        <item name="timeFormat" xsi:type="string">HH:mm</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                    </item>
                    <item name="storeTimeZone" xsi:type="string">string</item>
                </item>
            </argument>
        </field>
        <field name="finished_at">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Finished At</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">appointment</item>
                    <item name="dataScope" xsi:type="string">finished_at</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-optional-datetime" xsi:type="boolean">true</item>
                    </item>
                    <item name="options" xsi:type="array">
                        <item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
                        <item name="timeFormat" xsi:type="string">HH:mm</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                    </item>
                    <item name="storeTimeZone" xsi:type="string">string</item>
                </item>
            </argument>
        </field>
        <field name="worker">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Perfect\Event\Model\Config\Source\Options\Worker</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Worker</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">appointment</item>
                    <item name="dataScope" xsi:type="string">employee_id</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="employees">
        <settings>
            <label translate="true">Employees</label>
        </settings>
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Custom tab</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <!-- this attribute is, if you want your custom section by default opened when product form calls, if not then set the value as false -->
                <item name="opened" xsi:type="boolean">true</item>
                <item name="canShow" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="string">1</item>
            </item>
        </argument>
        <container name="custom_tab_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="string">2</item>
                </item>
            </argument>
        </container>
    </fieldset>
</form>