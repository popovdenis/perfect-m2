<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="perfect_event" resource="default" engine="innodb" comment="Perfect Event">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity Id"/>
        <column xsi:type="varchar" name="title" length="150" nullable="false"
                comment="Title"/>
        <column xsi:type="smallint" name="enabled" padding="6" unsigned="true" nullable="false" identity="false"
                default="0" comment="Enabled Status"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>

</schema>