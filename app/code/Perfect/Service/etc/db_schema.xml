<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="perfect_service" resource="default" engine="innodb" comment="Perfect Service">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity Id"/>
        <column xsi:type="varchar" name="service_name" length="255" nullable="false"
                comment="Service Name"/>
        <column xsi:type="smallint" name="service_duration" padding="6" unsigned="false" nullable="false" identity="false" default="0"
                comment="Service Duration"/>
        <column xsi:type="decimal" name="service_price" scale="2" precision="12" unsigned="false" nullable="false" default="0"
                comment="Service Price"/>
        <column xsi:type="decimal" name="service_price_from" scale="2" precision="12" unsigned="false" nullable="false" default="0"
                comment="Service Price From"/>
        <column xsi:type="decimal" name="service_price_to" scale="2" precision="12" unsigned="false" nullable="false" default="0"
                comment="Service Price To"/>
        <column xsi:type="smallint" name="is_active" padding="6" unsigned="false" nullable="false" identity="false" default="0"
                comment="Is Service Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <index referenceId="PERFECT_SERVICE_SERVICE_NAME" indexType="btree">
            <column name="service_name"/>
        </index>
        <index referenceId="PERFECT_SERVICE_SERVICE_QUANTITY" indexType="btree">
            <column name="service_quantity"/>
        </index>
        <index referenceId="PERFECT_SERVICE_SERVICE_QUANTITY" indexType="btree">
            <column name="service_price"/>
        </index>
        <index referenceId="PERFECT_SERVICE_SERVICE_QUANTITY" indexType="btree">
            <column name="service_price_from"/>
        </index>
        <index referenceId="PERFECT_SERVICE_SERVICE_QUANTITY" indexType="btree">
            <column name="service_price_to"/>
        </index>
        <index referenceId="PERFECT_SERVICE_SERVICE_QUANTITY" indexType="btree">
            <column name="service_type"/>
        </index>
        <index referenceId="PERFECT_SERVICE_SERVICE_QUANTITY" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>

    <table name="perfect_event_service" resource="default" engine="innodb" comment="Service To Event Linkage Table">
        <column xsi:type="int" name="entity_id" unsigned="false" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="event_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Event ID"/>
        <column xsi:type="int" name="service_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Service ID"/>
        <column xsi:type="int" name="service_quantity" padding="10" unsigned="false" nullable="false"
                identity="false" default="0" comment="Service Quantity"/>
        <column xsi:type="int" name="position" unsigned="false" nullable="false" identity="false"
                default="0" comment="Position"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
            <column name="event_id"/>
            <column name="service_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="PERFECT_EVENT_SERVICE_SERVICE_ID_PERFECT_SERVICE_ENTITY_ID"
                    table="perfect_event_service" column="service_id" referenceTable="perfect_service" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="PERFECT_EVENT_SERVICE_EVENT_ID_PERFECT_EVENT_ID"
                    table="perfect_event_service" column="event_id" referenceTable="perfect_event" referenceColumn="id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="PERFECT_EVENT_SERVICE_EVENT_ID_SERVICE_ID">
            <column name="event_id"/>
            <column name="service_id"/>
        </constraint>
        <index referenceId="PERFECT_EVENT_SERVICE_SERVICE_ID" indexType="btree">
            <column name="service_id"/>
        </index>
    </table>

</schema>