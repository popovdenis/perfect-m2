<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">perfect_service_form.perfect_service_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Perfect\Service\Block\Adminhtml\Edit\Buttons\Back"/>
            <button name="delete" class="Perfect\Service\Block\Adminhtml\Edit\Buttons\Delete"/>
            <button name="save" class="Perfect\Service\Block\Adminhtml\Edit\Buttons\Save"/>
            <button name="save_and_continue"
                    class="Perfect\Service\Block\Adminhtml\Edit\Buttons\SaveAndContinue"/>
        </buttons>
        <layout>
            <navContainerName>left</navContainerName>
            <type>tabs</type>
        </layout>
        <deps>
            <dep>perfect_service_form.perfect_service_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="perfect_service_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Perfect\Service\Model\DataProvider\Service</argument>
            <argument name="name" xsi:type="string">perfect_service_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="perfect_service/index/editPost"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="service">
        <settings>
            <label translate="true">General Settings</label>
        </settings>
        <field name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">service</item>
                    <item name="dataScope" xsi:type="string">entity_id</item>
                </item>
            </argument>
        </field>
        <field name="service_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Service Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">service</item>
                    <item name="dataScope" xsi:type="string">service_name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="service_price">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Price</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">service</item>
                    <item name="dataScope" xsi:type="string">service_price</item>
                </item>
            </argument>
        </field>
        <field name="is_price_range">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Select price in range</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">select</item>
                    <item name="dataScope" xsi:type="string">is_price_range</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>0</value>
                            <actions>
                                <action name="0">
                                    <target>perfect_service_form.areas.service.service.service_price_from</target>
                                    <callback>hide</callback>
                                </action>
                                <action name="1">
                                    <target>perfect_service_form.areas.service.service.service_price_to</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>1</value>
                            <actions>
                                <action name="0">
                                    <target>perfect_service_form.areas.service.service.service_price_from</target>
                                    <callback>show</callback>
                                </action>
                                <action name="1">
                                    <target>perfect_service_form.areas.service.service.service_price_to</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
        </field>
        <field name="service_price_from">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Price From</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">select</item>
                    <item name="dataScope" xsi:type="string">service_price_from</item>
                </item>
            </argument>
        </field>
        <field name="service_price_to">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Price To</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">select</item>
                    <item name="dataScope" xsi:type="string">service_price_to</item>
                </item>
            </argument>
        </field>
        <container name="service_duration" component="Magento_Ui/js/form/components/group">
            <argument name="data" xsi:type="array">
                <item name="type" xsi:type="string">group</item>
                <item name="config" xsi:type="array">
                    <item name="breakLine" xsi:type="boolean">true</item>
                </item>
            </argument>
            <field name="service_duration_h" formElement="select">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">service</item>
                    </item>
                </argument>
                <settings>
                    <additionalClasses>
                        <class name="admin__field-service">true</class>
                    </additionalClasses>
                    <label translate="true">Duration</label>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Perfect\Service\Ui\Component\Service\Form\Employers\Hours"/>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="service_duration_m" formElement="select">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">service</item>
                    </item>
                </argument>
                <settings>
                    <additionalClasses>
                        <class name="admin__field-service-last">true</class>
                    </additionalClasses>
                    <label translate="true">Duration</label>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Perfect\Service\Ui\Component\Service\Form\Employers\Minutes"/>
                        </settings>
                    </select>
                </formElements>
            </field>
        </container>
    </fieldset>
    <fieldset name="employees">
        <settings>
            <label translate="true">Employees</label>
        </settings>
        <dynamicRows name="masters">
            <settings>
                <addButtonLabel translate="true">Add Employee</addButtonLabel>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <componentType>dynamicRows</componentType>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                    </item>
                </argument>
                <field name="employee_id" formElement="select">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="prefixName" xsi:type="string">employee_id</item>
                            <item name="prefixElementName" xsi:type="string">option_</item>
                            <item name="dataScope" xsi:type="string">employee_id</item>
                            <item name="fit" xsi:type="boolean">false</item>
                            <item name="label" xsi:type="string" translate="true">Employee Name</item>
                            <item name="dataType" xsi:type="string">text</item>
                        </item>
                    </argument>
                    <settings>
                        <validation>
                            <rule name="validate-select" xsi:type="boolean">true</rule>
                        </validation>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Perfect\Service\Ui\Component\Service\Form\Employers\Options"/>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <field name="master_duration_h" component="Magento_Ui/js/form/element/select" formElement="select">
                    <settings>
                        <dataType>int</dataType>
                        <label translate="true">Duration (hours)</label>
                        <dataScope>service_duration_h</dataScope>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Perfect\Service\Ui\Component\Service\Form\Employers\Hours"/>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <field name="master_duration_m" component="Magento_Ui/js/form/element/select" formElement="select">
                    <settings>
                        <dataType>int</dataType>
                        <label translate="true">Duration (minutes)</label>
                        <dataScope>service_duration_m</dataScope>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Perfect\Service\Ui\Component\Service\Form\Employers\Minutes"/>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <actionDelete template="Magento_Backend/dynamic-rows/cells/action-delete">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="fit" xsi:type="boolean">false</item>
                        </item>
                    </argument>
                    <settings>
                        <additionalClasses>
                            <class name="some-class">true</class>
                        </additionalClasses>
                        <dataType>text</dataType>
                        <label>Actions</label>
                        <componentType>actionDelete</componentType>
                    </settings>
                </actionDelete>
            </container>
        </dynamicRows>
    </fieldset>
</form>