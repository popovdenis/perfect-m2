<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">perfect_service_form.perfect_service_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Perfect\Service\Block\Adminhtml\Edit\Buttons\Back"/>
            <button name="delete" class="Perfect\Service\Block\Adminhtml\Edit\Buttons\Delete"/>
            <button name="save" class="Perfect\Service\Block\Adminhtml\Edit\Buttons\Save"/>
            <button name="save_and_continue"
                    class="Perfect\Service\Block\Adminhtml\Edit\Buttons\SaveAndContinue"/>
        </buttons>
        <layout>
            <navContainerName>left</navContainerName>
            <type>tabs</type>
        </layout>
        <deps>
            <dep>perfect_service_form.perfect_service_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="perfect_service_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Perfect\Service\Model\DataProvider\Service</argument>
            <argument name="name" xsi:type="string">perfect_service_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="perfect_service/index/editPost"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="service">
        <settings>
            <label translate="true">General Settings</label>
        </settings>
        <field name="entity_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">service</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>entity_id</dataScope>
            </settings>
        </field>
        <field name="service_name" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">service</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <dataScope>service_name</dataScope>
                <label translate="true">Service Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="employee_position" sortOrder="70" component="Magento_Ui/js/form/element/select" formElement="select">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Category</label>
                <dataScope>employee_position_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Perfect\Service\Ui\Component\Service\Form\CustomerPosition"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="prices">
        <settings>
            <label translate="true">Price Configuration</label>
        </settings>
        <dynamicRows name="price_rows">
            <settings>
                <addButtonLabel translate="true">Add Price</addButtonLabel>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <componentType>dynamicRows</componentType>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                    </item>
                </argument>

                <field name="employee_level" formElement="select">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="prefixName" xsi:type="string">employee_level</item>
                            <item name="prefixElementName" xsi:type="string">option_</item>
                            <item name="dataScope" xsi:type="string">employee_level</item>
                            <item name="fit" xsi:type="boolean">false</item>
                            <item name="label" xsi:type="string" translate="true">Master Level</item>
                            <item name="dataType" xsi:type="string">text</item>
                        </item>
                    </argument>
                    <settings>
                        <validation>
                            <rule name="validate-select" xsi:type="boolean">true</rule>
                        </validation>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Perfect\Service\Ui\Component\Service\Form\CustomerLevel"/>
                            </settings>
                        </select>
                    </formElements>
                </field>

                <field name="is_price_range" formElement="checkbox">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="source" xsi:type="string">service</item>
                            <item name="default" xsi:type="number">0</item>
                        </item>
                    </argument>
                    <settings>
                        <dataType>boolean</dataType>
                        <label translate="true">Select price in range</label>
                        <dataScope>is_price_range</dataScope>
                    </settings>
                    <formElements>
                        <checkbox>
                            <settings>
                                <valueMap>
                                    <map name="false" xsi:type="number">0</map>
                                    <map name="true" xsi:type="number">1</map>
                                </valueMap>
                                <prefer>toggle</prefer>
                            </settings>
                        </checkbox>
                    </formElements>
                </field>

                <field name="service_price_from" formElement="input" component="Perfect_Service/js/format-price">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="source" xsi:type="string">service</item>
                        </item>
                    </argument>
                    <settings>
                        <validation>
                            <rule name="required-entry" xsi:type="boolean">true</rule>
                        </validation>
                        <dataType>int</dataType>
                        <label translate="true">Price</label>
                        <dataScope>service_price_from</dataScope>
                    </settings>
                </field>

                <field name="service_price_to" formElement="input" component="Perfect_Service/js/format-price">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="source" xsi:type="string">service</item>
                        </item>
                    </argument>
                    <settings>
                        <dataType>int</dataType>
                        <dataScope>service_price_to</dataScope>
                    </settings>
                </field>

                <actionDelete template="Magento_Backend/dynamic-rows/cells/action-delete">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="fit" xsi:type="boolean">false</item>
                        </item>
                    </argument>
                    <settings>
                        <additionalClasses>
                            <class name="some-class">true</class>
                        </additionalClasses>
                        <dataType>text</dataType>
                        <label>Actions</label>
                        <componentType>actionDelete</componentType>
                    </settings>
                </actionDelete>

            </container>
        </dynamicRows>
    </fieldset>

    <fieldset name="employees">
        <settings>
            <label translate="true">Employees</label>
        </settings>
        <dynamicRows name="masters">
            <settings>
                <addButtonLabel translate="true">Add Employee</addButtonLabel>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <componentType>dynamicRows</componentType>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                    </item>
                </argument>
                <field name="employee_id" formElement="select">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="prefixName" xsi:type="string">employee_id</item>
                            <item name="prefixElementName" xsi:type="string">option_</item>
                            <item name="dataScope" xsi:type="string">employee_id</item>
                            <item name="fit" xsi:type="boolean">false</item>
                            <item name="label" xsi:type="string" translate="true">Employee Name</item>
                            <item name="dataType" xsi:type="string">text</item>
                        </item>
                    </argument>
                    <settings>
                        <validation>
                            <rule name="validate-select" xsi:type="boolean">true</rule>
                        </validation>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Perfect\Service\Ui\Component\Service\Form\Employers\Options"/>
                            </settings>
                        </select>
                    </formElements>
                </field>

                <field name="master_duration_h" component="Magento_Ui/js/form/element/select" formElement="select">
                    <settings>
                        <dataType>int</dataType>
                        <label translate="true">Duration (hours)</label>
                        <dataScope>service_duration_h</dataScope>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Perfect\Service\Ui\Component\Service\Form\Employers\Hours"/>
                            </settings>
                        </select>
                    </formElements>
                </field>

                <field name="master_duration_m" component="Magento_Ui/js/form/element/select" formElement="select">
                    <settings>
                        <dataType>int</dataType>
                        <label translate="true">Duration (minutes)</label>
                        <dataScope>service_duration_m</dataScope>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Perfect\Service\Ui\Component\Service\Form\Employers\Minutes"/>
                            </settings>
                        </select>
                    </formElements>
                </field>

                <actionDelete template="Magento_Backend/dynamic-rows/cells/action-delete">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="fit" xsi:type="boolean">false</item>
                        </item>
                    </argument>
                    <settings>
                        <additionalClasses>
                            <class name="some-class">true</class>
                        </additionalClasses>
                        <dataType>text</dataType>
                        <label>Actions</label>
                        <componentType>actionDelete</componentType>
                    </settings>
                </actionDelete>

            </container>
        </dynamicRows>
    </fieldset>
</form>